{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.0/.schema/devbox.schema.json",
  "packages": [
    "go@1.23",
    "python@3.12",
    "python312Packages.pip"
  ],
  "shell": {
    "init_hook": [
      "echo 'efb-connector development environment'",
      "if [ ! -d .venv ]; then python -m venv .venv; fi",
      "source .venv/bin/activate",
      "pip install -q -r requirements.txt 2>/dev/null || true"
    ],
    "scripts": {
      "build": "go build -o gpx-uploader ./cmd",
      "test": "go test ./...",
      "sync": "source .venv/bin/activate && ./gpx-uploader sync",
      "list": "source .venv/bin/activate && ./gpx-uploader list"
    }
  }
}
